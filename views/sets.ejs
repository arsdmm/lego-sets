<h1>LEGO Sets</h1>
<form action="/lego/sets/search" method="GET" class="mb-3">
	<input type="text" name="theme" placeholder="Search by theme..." required>
	<button type="submit">Search</button>
  </form>
<body>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Theme</th>
      <th>Year</th>
      <th>Parts</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% sets.forEach(set => { %>
      <tr>
        <td><img src="<%= set.img_url %>" alt="<%= set.name %>" width="100"></td>
        <td><%= set.name %></td>
        <td><%= set.Theme.name %></td>
        <td><%= set.year %></td>
        <td><%= set.num_parts %></td>
        <td><a href="/lego/sets/<%= set.set_num %>">View</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
